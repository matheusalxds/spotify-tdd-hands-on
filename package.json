{
  "name": "spotify-wrapper",
  "version": "2.0.1",
  "description": "A wrapper to work with the Spotify Web API",
  "main": "src/modules/spotify/index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run lint && npm run test:coverage",
    "test": "./node_modules/.bin/mocha src/modules/**/*.spec.js --require babel-register",
    "test:watch": "./node_modules/.bin/mocha src/modules/**/*.spec.js --require babel-register --watch",
    "test:coverage": "nyc npm test",
    "clear": "rimraf build",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir build src",
    "build:watch": "npm run build -- --watch"
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/***"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "husky": "^1.3.1",
    "mocha": "^6.0.2",
    "node-fetch": "^2.3.0",
    "nyc": "^14.0.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "sinon-stub-promise": "^4.0.0"
  }
}
